<!-- 
    Structure:
        1. 網頁標題、Logo
        2. 年份選單
        3. 縣市、區域選單
        4. 分享
 -->
<header class="overflow-visible">
    <div class="d-flex flex-column flex-lg-row align-items-center py-12 px-24 border-bottom">
        <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center">
            <!-- 1. 網頁標題、Logo -->
            <a href="index.html" class="d-flex align-items-center mb-8 me-sm-24">
                <img src="/assets/images/logo-small.png" alt="logo" width="53px" height="33px" class="me-8 d-none d-xsm-block">
                <span class="f-mantou fs-28">台灣歷年總統 都幾?</span>
            </a>
            <!-- 2. 年份選單 -->
            <div class="dropdown me-16 d-flex align-items-center">
                <p class="d-none d-md-block mb-0 fw-bold me-md-12">
                    選擇年份
                </p>
                <a  class="btn btn-secondary dropdown-toggle rounded-pill" 
                    id="dropdownMenuLink"
                    href="#"
                    role="button" 
                    data-bs-toggle="dropdown" 
                    aria-expanded="false">
                    <span class="me-72 me-sm-28">2020</span>
                </a>
                <ul class="dropdown-menu" 
                    style="width:118px" 
                    aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" href="#">2020</a></li>
                    <li><a class="dropdown-item" href="#">2016</a></li>
                    <li><a class="dropdown-item" href="#">2012</a></li>
                    <li><a class="dropdown-item" href="#">2008</a></li>
                    <li><a class="dropdown-item" href="#">2004</a></li>
                    <li><a class="dropdown-item" href="#">2000</a></li>
                    <li><a class="dropdown-item" href="#">1996</a></li>
                </ul>
            </div>
        </div>
        <!-- 3. 縣市、區域選單 -->
        <div class="row row-cols-2 g-0 my-16 my-lg-0">
            <!-- 3-1. 縣市 -->
            <div class="dropdown col">
                <a  class="btn btn-secondary dropdown-toggle d-flex align-items-center" 
                    style="border-radius: 50px 0 0 50px;"
                    id="dropdown-city" 
                    href="#"
                    role="button" 
                    data-bs-toggle="dropdown" 
                    aria-expanded="false">
                    <span class="material-symbols-outlined me-8 me-xsm-12 d-none d-xsm-block">search</span>
                    <span class="me-20 me-xsm-28 me-sm-96 me-lg-48">全部縣市</span>
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdown-city">
                    <li><a class="dropdown-item" href="#">台北市</a></li>
                    <li><a class="dropdown-item" href="#">新北市</a></li>
                    <li><a class="dropdown-item" href="#">高雄市</a></li>
                </ul>
            </div>
            <!-- 3-2. 區域 -->
            <div class="dropdown col">
                <a  class="btn btn-secondary dropdown-toggle ps-0 text-start" 
                    style="border-radius: 0 50px 50px 0;"
                    id="dropdown-region" 
                    href="#"
                    role="button" 
                    data-bs-toggle="dropdown" 
                    aria-expanded="false">
                    <span class="ms-8 me-20 me-xsm-28 me-sm-96 me-lg-48 border-start border-link-color border-2 ps-12">選擇區域</span>
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdown-region">
                    <li><a class="dropdown-item" href="#">台北市</a></li>
                    <li><a class="dropdown-item" href="#">新北市</a></li>
                    <li><a class="dropdown-item" href="#">高雄市</a></li>
                </ul>
            </div>
        </div>
        
        <!-- 4. 分享 -->
        <div class="d-none d-xl-flex ms-auto">
            <p class="me-16 mb-0 ps-0">分享</p>
            <ul class="d-flex mb-0 ps-0">
                <li class="me-16 align-center"><a href="#"><img src="/assets/images/icon-fb.png" height="23px" class="align-top" alt="facebook"></a></li>
                <li class="me-16 align-center"><a href="#"><img src="/assets/images/icon-ig.png" height="23px" class="align-top" alt="instagram"></a></li>
                <li class="me-16 align-center"><a href="#"><img src="/assets/images/icon-yt.png" height="23px" class="align-top" alt="youtube"></a></li>
            </ul>
        </div>
    </div>
</header>