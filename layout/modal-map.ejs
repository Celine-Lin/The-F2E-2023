<!-- Button trigger modal -->
<div class="w-100 h-100 opacity-25 position-absolute bg-black d-xl-none"></div>
<button 
    type="button" 
    class="btn btn-primary fs-14 position-absolute top-50 start-50 translate-middle d-xl-none" 
    data-bs-toggle="modal" 
    data-bs-target="#modalMap">
    進入地圖
</button>
<!-- Modal -->
<div 
    class="modal fade" 
    id="modalMap" 
    data-bs-backdrop="static" 
    data-bs-keyboard="false" 
    tabindex="-1" 
    aria-labelledby="modalMapLabel" 
    aria-hidden="true">
<div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="modalMapLabel">台灣地圖</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-0">
            <img src="/assets/images/map.png" class="w-100 bg-map-blue" alt="Taiwan map">
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary col" data-bs-dismiss="modal">返回</button>
            <button type="button" class="btn btn-primary col">搜尋</button>
        </div>
    </div>
</div>
</div>